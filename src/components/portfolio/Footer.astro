---
import { useTranslations, getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---


<footer>
    <div>
        <p>
            {t("footer.made")}
            <a href="https://github.com/Iv44n" style="color: var(--blue-600);">GitHub</a>.
        </p>
    </div>
    <div class="social-links">
        <a href="https://github.com/Iv44n" target="_blank">
            <i class="ri-github-fill icon-medium"></i>
        </a>
        <a href="" target="_blank">
            <i class="ri-linkedin-box-fill icon-medium"></i>
        </a>
        <a
            href="https://instagram.com/atm.iv4n?igshid=OGQ5ZDc2ODk2ZA=="
            target="_blank"
        >
            <i class="ri-instagram-fill icon-medium"></i>
        </a>
    </div>
</footer>

<style>
    footer {
        width: 100%;
        padding: 4rem 13%;
        display: flex;
        gap: 2rem;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .social-links {
        display: flex;
        gap: 1.2rem;
        flex-wrap: wrap;
    }

    @media (max-width: 868px) {
        footer {
            padding: 4rem 7%;
        }
    }
</style>
